@page
@model IndexModel
@{
    ViewData["Title"] = "Customers";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Customer List</h2>
		</div>
	</div>
	<br /><br />

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Customer Id</th>
				<th>
					Customer Name
				</th>
				<th>
					Phone Number
				</th>
				<th>
					Number of Orders
				</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.Customers)
			{
				<tr>
					<td>@obj.Id</td>
					<td>@obj.Name</td>
					<td>@obj.PhoneNumber</td>
					<td>
						@obj.Orders?.Count()
					</td>
					<td width="20%">
						<div class="w-7 btn-group" role="group">
							<a asp-page="/Orders/Index" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								View Orders
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>
